.work-item {
    width: 96vw;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    background: #ffffff;
}
.title {
    font-size:30rpx;
    overflow: hidden;
    text-overflow: ellipsis; 
    white-space: nowrap;
    margin:0 30rpx;
}
.proj{
    font-size:20rpx;
    margin:0 30rpx;
}
.line{
    width:100%;
    height:2rpx;
    background:rgba(150,150,150,0.2);
}
.time{
    color:rgb(150,150,150);
    font-size:20rpx;
    margin-left:15rpx;
}